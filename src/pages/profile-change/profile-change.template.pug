                    template(data-component="chatNameInput")

            template(data-component="chatNameClue")

            div(class='form-row-data')
                div(class='legend')
                    template(data-component="phoneLabel")
                div(class='value')
                    template(data-component="phoneInput")

            template(data-component="phoneClue")

            div(class='row-data-action')
