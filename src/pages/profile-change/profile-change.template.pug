    div(class='form-container')
        form(id='profile_form')

            div(class='form-row-data')
                div(class='legend')
                    template(data-component="mailLabel")
                div(class='value')
                    template(data-component="mailInput")

            template(data-component="mailClue")

            div(class='form-row-data')
                div(class='legend')
                    template(data-component="loginLabel")
                div(class='value')
                    template(data-component="loginInput")

            template(data-component="loginClue")
